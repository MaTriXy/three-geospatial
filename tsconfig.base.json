{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@geovanni/3d-tiles": ["libs/3d-tiles/src/index.ts"],
      "@geovanni/atmosphere": ["libs/atmosphere/src/index.ts"],
      "@geovanni/atmosphere/r3f": ["libs/atmosphere/src/r3f/index.ts"],
      "@geovanni/core": ["libs/core/src/index.ts"],
      "@geovanni/core/r3f": ["libs/core/src/r3f/index.ts"],
      "@geovanni/csm": ["libs/csm/src/index.ts"],
      "@geovanni/csm/r3f": ["libs/csm/src/r3f/index.ts"],
      "@geovanni/effects": ["libs/effects/src/index.ts"],
      "@geovanni/effects/r3f": ["libs/effects/src/r3f/index.ts"],
      "@geovanni/terrain": ["libs/terrain/src/index.ts"],
      "@geovanni/terrain/r3f": ["libs/terrain/src/r3f/index.ts"],
      "@geovanni/terrain-core": ["libs/terrain-core/src/index.ts"],
      "@geovanni/worker": ["libs/worker/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
